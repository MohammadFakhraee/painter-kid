<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/riv_itemPaint_paint"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:paddingTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/paint_musics_xylophone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_itemPaint_paintHolder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/template_paint_blue_dark" />

        <Button
            android:id="@+id/btn_itemPaint_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/template_name_blue_dark"
            android:textColor="@color/palette_blue_dark"
            android:textStyle="bold"
            tools:text="Banana" />
    </LinearLayout>
</RelativeLayout>