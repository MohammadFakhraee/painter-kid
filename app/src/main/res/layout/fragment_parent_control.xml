<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paint_list">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="313dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_parent_control">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_parental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingLeft="24dp"
                android:text="@string/parental_control"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_control_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:textColor="@color/black"
                android:textSize="26sp"
                tools:text="10 + 8 = " />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_control_answer1"
                    style="@style/DefaultButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_parent_control_btn1"
                    tools:text="21" />

                <Button
                    android:id="@+id/btn_control_answer2"
                    style="@style/DefaultButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_parent_control_btn2"
                    tools:text="21" />

                <Button
                    android:id="@+id/btn_control_answer3"
                    style="@style/DefaultButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_parent_control_btn3"
                    tools:text="21" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_control_exit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:background="@drawable/ic_parent_control_exit" />
</FrameLayout>