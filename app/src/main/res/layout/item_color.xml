<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:src="@color/gray200">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_itemColor"
        android:layout_width="@dimen/button_paint_medium"
        android:layout_height="@dimen/button_paint_medium"
        android:padding="1dp"
        android:src="@drawable/tile_heart"
        android:visibility="visible"
        app:riv_corner_radius="50dp" />

    <ImageView
        android:layout_width="@dimen/button_paint_medium"
        android:layout_height="@dimen/button_paint_medium"
        android:background="@drawable/ic_color_filter" />

</FrameLayout>